{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
        "dom",
        "dom.iterable",
        "esnext"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
        "src/**/*",
        "config/**/*",
        "./config/jest/setupTests.ts", 
        "./config/storybook"
  ],
  "exclude": [
        "node_modules",
        "dist"
  ]
}
